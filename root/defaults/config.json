{
  "port": 3000,
  "webAppDirectory": "public",
  "writeLogs": false,
  "noUpload": true,
  "scanOptions": {
    "skipImg": false,
    "scanInterval": 1.5,
    "pause": 50,
    "saveInterval": 500,
    "bootScanDelay": 15
  },
  "storage": {
    "albumArtDirectory": "/config/album-art",
    "dbDirectory": "/config/db"
  },
  "folders": {
    "library": { "root": "/music" }
  },
  "users": {
    "admin": {
      "password":"password",
      "vpaths": ["library"],
      "lastfm-user": "username",
      "lastfm-password": "password"
      }
  }
}
